{% extends 'base.html.twig' %}

{% block title %}All posts
{% endblock %}

{% block body %}
	{% if posts %}
		{% for post in posts %}
			<div>{{ post.text }}</div>
			<div style="color:gray">{{ post.created | date("M j,Y") }}</div>
			<div>{{ post.author.firstname }}</div><br>
			<a href="">test</a>

		{% endfor %}

	{% endif %}

{% endblock %}
