  </head>
  <body  >
  {% if app.user %}
  
   {% if app.user.darkMode == 1 %}
        <script>document.body.classList.add("darkmode");</script>
		{% else %}
			<script>document.body.classList.remove("darkmode");</script>
    {% endif %}
    	{% else %}
    
     <script>document.body.classList.add("darkmode");</script>
    {% endif %}
    {% block body %}
    {% endblock %}
    <footer>
    <div><img src="{{asset('uploads/userPic/logo-elan.svg')}}"></img></div>
      <div class="footerIcon">
