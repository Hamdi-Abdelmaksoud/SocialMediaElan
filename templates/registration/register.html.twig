{% extends 'base.html.twig' %}

{% block title %}
  Register
{% endblock %}

{% block body %}
<div class="navbar">
        <div class="logo"><img src="{{ asset('uploads/userPic/logo.png') }}">
        <div><span>ELAN</span><span style="color: #f49e0e;">FORMATION</span></div>
        </div>
        <div class="menu-toggle" onclick="toggleMenu()">â˜°</div>
        <div class="menu">
            <a href="https://elan-formation.fr/accueil" target="_blank">Elan formation</a>
            <a href="#">About Us</a>
            <a href="{{path('app_login')}}">Login</a>
             
        </div>
    </div>
    <img src="{{ asset('uploads/userPic/welcome.png') }}" style="position: absolute; top:10px;min-width:100%">
    {% for flash_error in app.flashes('verify_email_error') %}
      <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
    {% endfor %}
     <div class="register">
       
            {{ form_errors(registrationForm) }}
             {{ form_start(registrationForm) }}
       <div class="login-card">
 
        <div>{{ form_widget(registrationForm.firstName, { attr: { placeholder: 'first Name' }, label: false }) }}</div>
        <div>{{ form_widget(registrationForm.lastName, { attr: { placeholder: 'Last Name' }, label: false }) }}</div>
        <div class="register-widget">
          <div>{{ form_widget(registrationForm.email, { attr: { placeholder: 'Your Email' }, label: false }) }}</div>
          <div>{{ form_widget(registrationForm.city, { attr: { placeholder: 'City' }, label: false }) }}</div>
        </div>
        <div class="register-widget">
          <div>{{ form_row(registrationForm.linkedin, { attr: { placeholder: 'Your Linkedin link' }, label: false }) }}</div>
          <div>{{ form_row(registrationForm.github, { attr: { placeholder: 'Your Github link' }, label: false }) }}</div>
        </div>
      <div class="session">Session start ?</div>
      <div>{{ form_widget(registrationForm.sessionSD) }}</div>
      <div class="session">session End ?</div>
      <div>{{ form_widget(registrationForm.sessionED) }}</div>
      <div>{{ form_widget(registrationForm.plainPassword, { label: false }) }}</div>
      <div id="show-terms" onclick="toggle_div_fun('terms')">Click to View the Terms of Use</div>
      
      <div class="register-footer">
      <div id="terms">
        {{ include('registration/_terms.html.twig') }}
        <div id="agree-terms" >{{ form_row(registrationForm.agreeTerms ) }}</div>
      <div style="cursor: pointer;align-self:center;font-size:1.5rem;" onclick="toggle_div_fun('terms')">close</div>
      </div>
      <div class="button">
        <button type="submit" class="post-button">Register</button>
      </div>
      <div>
    </div>
  </div>
    {{ form_end(registrationForm) }}
  
{% endblock %}
