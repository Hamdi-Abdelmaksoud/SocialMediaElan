<div id="profile-card">
  <div class="frame">
    <img src="{{ asset('uploads/userPic/' ~ user.image) }}" alt="profile picture" />
  </div>
  <div id="profile-name">
    <span>{{ user }}</span>
    <span class="session">Session : {{ user.sessionSD|date('M j,Y') }} - {{ user.sessionED|date('M j,Y') }}</span>
    <span>{{ user.city }}</span>
  </div>

  <div class="header-btn">
    <div class="btn-follow">
      <a href="{{ path('app_message_send', { id: user.id }) }}">chat</a>
    </div>
    {% if user in app.user.getFollows() %}
      <div class="btn-follow">
        <a href="{{ path('app_unfollow', { id: user.id }) }}">unfollow</a>
      </div>
    {% else %}
      <div class="btn-follow">
        <a href="{{ path('app_follow', { id: user.id }) }}">follow</a>
      </div>
    {% endif %}
  </div>
  <div class="links">
    <div class="frame-btn">
      <a href="#"><i class="fa-brands fa-github fa-xl"></i></a>
    </div>
    <div class="frame-btn">
      <a href="#"><i class="fa-brands fa-linkedin fa-xl"></i></a>
    </div>
    <div class="frame-btn">
      <a href="#"><i class="fa-solid fa-at fa-xl"></i></a>
    </div>
  </div>

  {% if app.user == user %}
    <div class="settings">
      <a href="{{ path('app_profile_edit') }}">Settings</a>
    </div>
{# dark mode btn#}
<div id="mode">

 <a href="{{path("app_profile_mode")}}">
{% if app.user.isDarkMode %}
<span class="material-icons">
light_mode
</span>
{% else %}
<span class="material-icons">
dark_mode
</span> 
{% endif %}
 

</a>
</div>
{# fin dark mode#}
    
  {% endif %}

  {# <div class="stats"><span>Posts : {{user.posts.count}}</span><span>Follow : {{user.follows.count}}</span><span>Followers : {{user.followers.count}}</span></div> #}
</div>
